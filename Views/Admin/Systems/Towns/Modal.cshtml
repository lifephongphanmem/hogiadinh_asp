@{
    var districts = (IEnumerable<Districts>)ViewData["Districts"];
}
<div class="modal fade" id="Create_Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="card-label">
                    Thông tin đơn vị
                    <span class="d-block text-muted pt-2 font-size-sm">Thêm mới thông tin xã/phường</span>
                </h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="row" id="data_create">
                    <div class="col-xl-6">
                        <div class="form-group fv-plugins-icon-container">
                            <label style="font-weight:bold">Quận/huyện: </label>
                            <select class="form-control" id="mahuyen_create" name="mahuyen_create">
                                @foreach (var item in districts)
                                {
                                    <option value="@item.MaHuyen">@item.TenHuyen</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-xl-6">
                        <div class="form-group fv-plugins-icon-container">
                            <label style="font-weight:bold">Mã đơn vị: </label>
                            <input type="text" id="maxa_create" name="maxa_create" class="form-control" />
                        </div>
                    </div>
                    <div class="col-xl-6">
                        <div class="form-group fv-plugins-icon-container">
                            <label style="font-weight:bold">Tên đơn vị: </label>
                            <input type="text" id="tenxa_create" name="tenxa_create" class="form-control" />
                        </div>
                    </div>
                    <div class="col-xl-6">
                        <div class="form-group fv-plugins-icon-container">
                            <label style="font-weight:bold">Phụ cấp khu vực (%) </label>
                            <input type="number" id="hesophucapkhuvuc_create" name="hesophucapkhuvuc_create" class="form-control" step="1" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light-danger font-weight-bold" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary font-weight-bold" onclick="Store()">Thêm mới</button>
            </div>
        </div>
    </div>
</div>
<!--Edit Modal-->
<div class="modal fade" id="Edit_Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="card-label">
                    Thông tin đơn vị
                    <span class="d-block text-muted pt-2 font-size-sm">Chỉnh sửa thông tin xã/phường</span>
                </h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="row" id="edit_thongtin">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light-danger font-weight-bold" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary font-weight-bold" onclick="Update()">Cập nhật</button>
            </div>
        </div>
    </div>
</div>

<!--Delete Modal-->
<div class="modal fade" id="Delete_Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="card-label">
                    Thông tin đơn vị
                    <span class="d-block text-muted pt-2 font-size-sm">Đồng ý xóa thông tin đơn vị ???</span>
                </h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <form asp-controller="Districts" asp-action="Delete">
                <div class="modal-body">
                    <div class="form-group fv-plugins-icon-container">
                        <label style="font-weight:bold">Đơn vị: </label>
                        <b id="tendonvi_delete" style="color: #0000FF"></b>
                        <input hidden id="id_delete" name="id_delete" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light-danger font-weight-bold" data-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary font-weight-bold">Đồng ý</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function Store() {
        var heso = ($("#hesophucapkhuvuc_create").val()).replace(".", ",");
        $.ajax({
            url: '/Towns/Store',
            type: 'POST',
            data: {
                MaHuyen: $('#mahuyen_create').val(),
                MaXa: $('#maxa_create').val(),
                TenXa: $('#tenxa_create').val(),
                MaTinh: $("#MaTinh").val(),
                HeSoPhuCapKhuVuc: heso,
            },
            dataType: 'JSON',
            success: function (data) {
                if (data.status == 'success') {
                    toastr.success(data.message);
                    location.reload();

                } else {
                    toastr.error(data.message, "Lỗi!");
                }
            }
        })
    }

    function getId(id, tendonvi) {l
        document.getElementById("id_delete").value = id;
        document.getElementById("tendonvi_delete").innerHTML = tendonvi;
    }

    function editId(id_edit) {
        $.ajax({
            url: '/Towns/Edit',
            type: 'POST',
            data: {
                id: id_edit
            },
            dataType: 'JSON',
            success: function (data) {
                if (data.status == 'success') {
                    toastr.success("Success!");
                    $('#edit_thongtin').replaceWith(data.message);
                } else {
                    toastr.error(data.message, "Lỗi!!!");
                }
            }
        })
    }

    function Update() {
        var heso = ($("#hesophucapkhuvuc_edit").val()).replace(".", ",");
        $.ajax({
            url: '/Towns/Update',
            type: 'POST',
            data: {
                MaHuyen: $('#mahuyen_edit').val(),
                MaXa: $('#maxa_edit').val(),
                TenXa: $('#tenxa_edit').val(),
                HeSoPhuCapKhuVuc: heso,
                Id: $('#id_edit').val(),
            },
            dataType: 'JSON',
            success: function (data) {
                if (data.status == 'success') {
                    toastr.success(data.message);
                    location.reload();
                } else {
                    toastr.error(data.message, "Lỗi!");
                }
            }
        })
    }
</script>