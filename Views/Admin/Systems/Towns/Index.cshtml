@{
    var districts = (IEnumerable<Districts>)ViewData["Districts"];
    int record_id = 1;
}
@model IEnumerable<Towns>
@section custom_style{
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}

@section custom_script{
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged.init();
        });
      
        $(function () {
            $('#MaHuyen').change(function () {
                var current_path_url = '/towns?';
                var mahuyen = '&MaHuyen=' + $('#MaHuyen').val();
                var url = current_path_url + mahuyen;
                 window.location.href = validURL(url) ;
            })
        });

    </script>
}
<div class="card card-custom wave wave-animate-slower">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                @ViewData["Title"]
                <span class="d-block text-muted pt-2 font-size-sm">Thông tin danh mục xã/phường</span>
            </h3>
        </div>
        <div class="card-toolbar">
            @if (Funtions_Global.CheckPermission(HttpContextAccessor.HttpContext.Session, "systems.towns", "Create"))
            {
                <button type="button" data-target="#Create_Modal" data-toggle="modal" class="btn btn-primary font-weight-bolder" title="Thêm mới">
                    <i class="la la-plus"></i>Thêm mới
                </button>
            }
        </div>
    </div>
    
    <div class="card-body">
        <div class="mb-12">
            <div class="row">
                <div class="col-xl-3">
                    <div class="form-group fv-plugins-icon-container">
                        <label style="font-weight:bold; color:blue">Quận/Huyện</label>
                        <select class="form-control" id="MaHuyen" name="MaHuyen">
                            @foreach (var item in districts)
                            {
                                <!option value="@item.MaHuyen" @((string)ViewData["MaHuyen"] == item.MaHuyen ? "selected" : "")>@item.TenHuyen</!option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <input hidden id="MaTinh" name="MaTinh" value="@ViewData["MaTinh"]" />
            <hr />
        </div>
        <table class="table table-striped table-bordered table-hover" id="sample_3">
            <thead>
                <tr style="text-align:center">
                    <th width="5%">#</th>
                    <th>Mã đơn vị</th>
                    <th>Tên đơn vị</th>
                    @* <th>Phụ cấp khu vực (%)</th> *@
                    <th width="15%">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align:center" width="5%">@(record_id++)</td>
                        <td style="font-weight:bold">@item.MaXa</td>
                        <td style="font-weight:bold;color:blue">@item.TenXa</td>
                        @* <td style="text-align:center">@item.HeSoPhuCapKhuVuc %</td> *@
                        <td>
                            @if (Funtions_Global.CheckPermission(HttpContextAccessor.HttpContext.Session, "systems.towns", "Edit"))
                            {
                                <button type="button" onclick="editId('@item.Id')" data-target="#Edit_Modal" data-toggle="modal"
                                        class="btn btn-sm btn-clean btn-icon" title="Chỉnh sửa">
                                    <i class="icon-lg la la-edit text-primary"></i>
                                </button>
                            }
                            @if (Funtions_Global.CheckPermission(HttpContextAccessor.HttpContext.Session, "systems.towns", "Delete"))
                            {
                                <button type="button" class="btn btn-sm btn-clean btn-icon" title="Xóa" data-toggle="modal" data-target="#Delete_Modal" onclick="getId('@item.Id', '@item.TenXa')">
                                    <i class="icon-lg la la-trash text-danger"></i>
                                </button>
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@await Html.PartialAsync("~/Views/Admin/Systems/Towns/Modal.cshtml")

